#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a positive integer: ";
    cin >> n;

    if (n <= 1) {
        cout << n << " is not a prime number.";
        return 0;
    }

    int count = 0; // to count divisors

    for (int i = 2; i <= n / 2; i++) {
        if (n % i == 0) {
            count++;
            break; // we found a divisor, no need to check further
        }
    }

    if (count == 0)
        cout << n << " is a prime number.";
    else
        cout << n << " is not a prime number.";

    return 0;
}
